{
  "$schema": "Sanoid.local.schema.json",
  "$id": "Sanoid.local.json",
  "$comments": "Default values are compatible with default operation of PERL sanoid. Any changes made here may break setups that use both Sanoid.net and PERL sanoid.",
  "UseSanoidConfiguration": true,
  "TakeSnapshots": false,
  "PruneSnapshots": false,
  "SanoidConfigurationPathBase": "./",
  "SanoidConfigurationDefaultsFile": "sanoid.defaults.conf",
  "SanoidConfigurationLocalFile": "sanoid.conf",
  "SanoidConfigurationCacheDirectory": "/var/cache/sanoid",
  "SanoidConfigurationRunDirectory": "/var/run/sanoid",
  "DryRun": false,
  "Formatting": {
    "SnapshotNaming": {
      "ComponentSeparator": "_",
      "Prefix": "autosnap",
      "TimestampFormatString": "yyyy-MM-dd_HH\\:mm\\:ss",
      "FrequentSuffix": "frequently",
      "HourlySuffix": "hourly",
      "DailySuffix": "daily",
      "WeeklySuffix": "weekly",
      "MonthlySuffix": "monthly",
      "YearlySuffix": "yearly"
    }
  },
  "PlatformUtilities": {
    "ps": "/usr/bin/ps",
    "zfs": "/usr/local/sbin/zfs",
    "zpool": "/usr/local/sbin/zpool"
  },
  "Monitoring": {
    "Nagios": {
      "$comments": "Nagios-specific monitoring options",
      "MonitorType": "Nagios",
      "Capacity": false,
      "Health": false,
      "Snapshots": false
    }
  },
  "Datasets": {
    "pool1/dataset1": {
      "Template": "production",
      "Enabled": false,
      "TemplateOverrides": {
        "Recursive": true
      }
    },
    "pool1/dataset2": {
      "Enabled": false
    },
    "pool1/zvol1": {
      "Template": "production_noHourly",
      "Enabled": false,
      "TemplateOverrides": {
        "SkipChildren": true,
        "SnapshotRetention": {
          "Yearly": 1 
        }
      } 
    } 
  },
  "Templates": {
    "production": {
      "$comments": "Sample template. Has similar settings as PERL sanoid's sample 'template_production' template. Note that it inherits from 'default,' even though it does not specify it, as default is the root template",
      "AutoPrune": true,
      "AutoSnapshot": true,
      "SnapshotRetention": {
        "Frequent": 0,
        "Hourly": 36,
        "Daily": 30,
        "Weekly": 0,
        "Monthly": 3,
        "Yearly": 0
      },
      "SkipChildren": false,
      "Recursive": false
    },
    "production_noHourly": {
      "$comments": "Sample template. Inherits all settings from the 'production' template (and its parent, 'default'), but overrides how many hourly snapshots are retained.",
      "UseTemplate": "production", 
      "SnapshotRetention": {
        "Hourly": 0
      }
    }
  }
}