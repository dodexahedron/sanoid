{
  "$schema": "Sanoid.local.schema.json",
  "$id": "Sanoid.local.json",
  "$comments": "Default values are mostly compatible with default operation of PERL sanoid. Any changes made here may break setups that use both Sanoid.net and PERL sanoid.",
  "TakeSnapshots": false,
  "PruneSnapshots": false,
  "DryRun": false,
  "Monitoring": {
    "Nagios": {
      "$comments": "Nagios-specific monitoring options",
      "MonitorType": "Nagios",
      "Capacity": false,
      "Health": false,
      "Snapshots": false
    }
  },
  "Datasets": {
    "pool1/dataset1": {
      "Template": "production",
      "Enabled": false
    },
    "pool1/dataset2": {
      "Enabled": false
    },
    "pool1/zvol1": {
      "Template": "production_noHourly",
      "Enabled": false,
      "TemplateOverrides": {
        "SnapshotRetention": {
          "Yearly": 1
        }
      }
    }
  },
  "Templates": {
    "default": {
      "Templates": {
        "production": {
          "$comments": "Sample template. Has similar settings as PERL sanoid's sample 'template_production' template. Note that it inherits from 'default,' even though it does not specify it, as default is the root template",
          "AutoPrune": true,
          "AutoSnapshot": true,
          "SnapshotRetention": {
            "Frequent": 0,
            "Hourly": 36,
            "Daily": 30,
            "Weekly": 0,
            "Monthly": 3,
            "Yearly": 0
          },
          "SkipChildren": false,
          "Recursive": false,
          "Templates": {
            "production_noHourly": {
              "$comments": "Sample template. Inherits all settings from the 'production' template (and its parent, 'default'), but overrides how many hourly snapshots are retained.",
              "UseTemplate": "production",
              "SnapshotRetention": {
                "Hourly": 0
              }
            }

          }
        }
      }
    }
  }
}