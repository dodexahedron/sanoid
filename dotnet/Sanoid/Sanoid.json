{
  "$schema": "Sanoid.schema.json",
  "$id": "Sanoid.json",
  "$comments": "Default settings for sanoid.net. It is not recommended to modify this file. Customized settings should be specified in /etc/sanoid/Sanoid.local.json",
  "TakeSnapshots": false,
  "PruneSnapshots": false,
  "CacheDirectory": "/var/cache/sanoid",
  "ZfsPath":  "/usr/local/sbin/zfs", 
  "ZpoolPath":  "/usr/local/sbin/zpool", 
  "DryRun": false,
  "Formatting": {
    "ComponentSeparator": "_",
    "Prefix": "autosnap",
    "TimestampFormatString": "yyyy-MM-dd_HH\\:mm\\:ss",
    "FrequentSuffix": "frequently",
    "HourlySuffix": "hourly",
    "DailySuffix": "daily",
    "WeeklySuffix": "weekly",
    "MonthlySuffix": "monthly",
    "YearlySuffix": "yearly"
  },
  "Monitoring": {
    "Nagios": {
      "$comments": "Nagios-specific monitoring options",
      "MonitorType": "Nagios",
      "Capacity": false,
      "Health": false,
      "Snapshots": false
    }
  },
  "Templates": {
    "default": {
      "$comments": "This is the default template. It is the root of the template inheritance tree. It should not be modified unless you FULLY understand the consequences. Snapshot times for Daily, Weekly, Monthly, and Yearly snapshots differ from PERL sanoid's defaults. See Sanoid.template.schema.json for details. All templates eventually inherit from this template.",
      "TakeSnapshots": true,
      "PruneSnapshots": true,
      "SnapshotTiming": {
        "FrequentPeriod": 15,
        "UseLocalTime": true,
        "HourlyMinute": 59,
        "DailyTime": "23:59",
        "WeeklyDay": 1,
        "WeeklyTime": "23:59",
        "MonthlyDay": 31,
        "MonthlyTime": "23:59",
        "YearlyMonth": 12,
        "YearlyDay": 31,
        "YearlyTime": "23:59"
      }
    }
  }
}