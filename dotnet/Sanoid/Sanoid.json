{
  "$schema": "Sanoid.schema.json",
  "$id": "Sanoid.json",
  "$comments": "Default values are compatible with default operation of PERL sanoid. Any changes made here may break setups that use both Sanoid.net and PERL sanoid.",
  "UseSanoidConfiguration": true,
  "TakeSnapshots": false,
  "PruneSnapshots": false,
  "SanoidConfigurationPathBase": "/etc/sanoid",
  "SanoidConfigurationDefaultsFile": "sanoid.defaults.conf",
  "SanoidConfigurationLocalFile": "sanoid.conf",
  "SanoidConfigurationCacheDirectory": "/var/cache/sanoid",
  "SanoidConfigurationRunDirectory": "/var/run/sanoid",
  "Formatting": {
    "SnapshotNaming": {
      "ComponentSeparator": "_",
      "Prefix": "autosnap",
      "TimestampFormatString": "yyyy-MM-dd_HH\\:mm\\:ss",
      "FrequentSuffix": "frequently",
      "HourlySuffix": "hourly",
      "DailySuffix": "daily",
      "WeeklySuffix": "weekly",
      "MonthlySuffix": "monthly",
      "YearlySuffix": "yearly"
    }
  },
  "PlatformUtilities": {
    "ps": "/usr/bin/ps",
    "zfs": "/usr/local/sbin/zfs",
    "zpool": "/usr/local/sbin/zpool"
  },
  "Monitoring": {
    "Nagios": {
      "$comments": "Nagios-specific monitoring options",
      "MonitorType": "Nagios",
      "Capacity": false,
      "Health": false,
      "Snapshots": false
    }
  },
  "Datasets": {
    "pool1/dataset1": {
      "Template": "#/Templates/production",
      "Enabled": false, 
      "Overrides": {
        "Recursive": true
      }
    },
    "pool1/zvol1": {
      "Template": "#/Templates/production_noHourly",
      "Enabled": false,
      "Overrides": {
        "SkipChildren": true,
        "SnapshotRetention": {
          "Yearly": 1 
        }
      } 
    } 
  },
  "Templates": {
    "default": {
      "$comments": "This is the default template. It should not be modified unless you FULLY understand the consequences. All templates eventually inherit from this template.",
      "AutoSnapshot": true,
      "AutoPrune": true,
      "FrequentPeriod": 15,
      "Recursive": false,
      "SkipChildren": false,
      "UseTemplate": "default",
      "SnapshotTiming": {
        "UseLocalTime": true,
        "HourlyMinute": 59,
        "Daily": "23:59",
        "WeeklyDay": 1,
        "WeeklyTime": "23:59",
        "MonthlyDay": 31,
        "MonthlyTime": "23:59",
        "YearlyMonth": 12,
        "YearlyDay": 31,
        "YearlyTime": "23:59"
      },
      "SnapshotRetention": {
        "Frequent": 0,
        "Hourly": 48,
        "Daily": 90,
        "Weekly": 0,
        "Monthly": 6,
        "Yearly": 0
      }
    },
    "production": {
      "$comments": "Sample template. Has the same settings as PERL sanoid's sample 'template_production' template. Note that it inherits from 'default,' even though it does not specify it, as default is the root template",
      "AutoPrune": true,
      "AutoSnapshot": true,
      "SnapshotRetention": {
        "Frequent": 0,
        "Hourly": 36,
        "Daily": 30,
        "Weekly": 0,
        "Monthly": 3,
        "Yearly": 0
      },
      "SkipChildren": false,
      "Recursive": false
    },
    "production_noHourly": {
      "$comments": "Sample template. Inherits all settings from the 'production' template (and its parent, 'default', but overrides how many hourly snapshots are retained.",
      "SnapshotRetention": {
        "Hourly": 0 
      }
    } 
  }
}